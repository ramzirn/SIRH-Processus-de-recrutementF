<odoo>
    <data>
        <record id="view_form_entretien" model="ir.ui.view">
            <field name="name">sirh.entretien.form</field>
            <field name="model">sirh.entretien</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Information">
                            <field name="candidature_id"/>
                            <field name="date_heure" widget="datetime" options='{"format": "DD/MM/YYYY HH:mm"}'/>
                            <field name="responsable"/>
                            <field name="interim"/>
                            <field name="salle"/>
                        </group>
                        <notebook>
                            <page string="Grille d'evaluation">
                                <field name="eval" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="crit"/>
                                        <field name="observation"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Potentiel du candidat">
                                <field name="eval" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="crit"/>
                                        <field name="observation"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_entretien_tree" model="ir.ui.view">
            <field name="name">sirh.entretien.tree</field>
            <field name="model">sirh.entretien</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Liste des entretiens">
                    <field name="candidature_id"/>
                    <field name="date_heure"/>
                    <field name="responsable"/>
                    <field name="interim"/>
                    <field name="salle"/>
                </tree>
            </field>
        </record>

        <record id="act_list_entretien" model="ir.actions.act_window">
            <field name="name">Liste des entretiens</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.entretien</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="act_form_entretien" model="ir.actions.act_window">
            <field name="name">Ajouter un entretien</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.entretien</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="menu_entretiens" name="Entretiens" parent="hr_recruitment.menu_hr_recruitment_root"
                  sequence="50"/>

        <menuitem id="menu_liste_entretien" name="Liste des entretiens" parent="menu_entretiens"
                  action="act_list_entretien" sequence="20"/>

        <menuitem id="menu_form_entretien" name="Planifier un entretien" parent="menu_entretiens"
                  action="act_form_entretien" sequence="10"/>

    </data>
</odoo>