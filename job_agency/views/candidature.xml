<odoo>
    <data>
        <record id="view_candidature_form" model="ir.ui.view">
            <field name="name">sirh.candidature.form</field>
            <field name="model">sirh.candidature</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="candidat_id"/>
                            <field name="besoin_id"/>
                            <field name="datedepot"/>
                            <field name="disponibilite"/>
                            <field name="conditionphysique"/>
                            <field name="departement"/>
                        </group>
                        <notebook>
                            <page string="Documentation">
                                <field name="docs" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="data"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Evaluation">
                                <field name="eval" widget="one2many_list">
                                    <tree editable="bottom">
                                        <field name="crit"/>
                                        <field name="observation"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_cadidature_tree" model="ir.ui.view">
            <field name="name">sirh.candidature.tree</field>
            <field name="model">sirh.candidature</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Liste des candidatures">
                    <field name="candidat_id"/>
                    <field name="besoin_id"/>
                    <field name="datedepot"/>
                    <field name="disponibilite"/>
                    <field name="conditionphysique"/>
                    <field name="departement"/>
                </tree>
            </field>
        </record>

        <record id="act_list_candidature" model="ir.actions.act_window">
            <field name="name">Liste des candidatures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidature</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="act_form_candidature" model="ir.actions.act_window">
            <field name="name">Ajouter une candidature</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidature</field>
            <field name="view_mode">form</field>
        </record>

        <menuitem id="menu_candidatures" name="Candidatures" parent="hr_recruitment.menu_hr_recruitment_root"
                  sequence="30"/>

        <menuitem id="menu_liste_candidature" name="Liste des candidatures" parent="menu_candidatures"
                  action="act_list_candidature" sequence="20"/>

        <menuitem id="menu_form_candidature" name="Ajouter une candidature" parent="menu_candidatures"
                  action="act_form_candidature" sequence="10"/>
    </data>
</odoo>