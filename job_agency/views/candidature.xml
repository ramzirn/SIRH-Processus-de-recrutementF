<odoo>
    <data>
        <!--        view form candidature-->
        <record id="view_candidature_form" model="ir.ui.view">
            <field name="name">sirh.candidature.form</field>
            <field name="model">sirh.candidature</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="candidat_id"/>
                            <field name="datedepot"/>
                            <field name="disponibilite"/>
                            <field name="conditionphysique"/>
                            <field name="departement"/>
                            <field name="cv"/>
                            <!--                        <field name="docs"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        view liste candidatures-->
        <record id="view_cadidature_tree" model="ir.ui.view">
            <field name="name">sirh.candidature.tree</field>
            <field name="model">sirh.candidature</field>
            <field name="arch" type="xml">
                <form string="Liste des candidatures">
                    <sheet>
                        <field name="candidat_id"/>
                        <field name="datedepot"/>
                        <field name="disponibilite"/>
                        <field name="conditionphysique"/>
                        <field name="departement"/>
                        <field name="cv"/>
                        <!--                        <field name="docs"/>-->
                    </sheet>
                </form>
            </field>
        </record>

        <!--        action pour vue tree candidature-->
        <record id="act_list_candidature" model="ir.actions.act_window">
            <field name="name">Liste des candidatures</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidature</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_candidatures" name="Candidatures" parent="hr_recruitment.menu_hr_recruitment_root" sequence="30"/>
        <menuitem id="menu_liste_candidature" name="Liste des candidatures" parent="menu_candidatures" action="act_list_candidature"/>

    </data>
</odoo>