<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue de type tree personnalisée pour la classe Employee -->
        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">employee.tree</field>
            <field name="model">candidat</field>
            <field name="arch" type="xml">
                <tree string="Grille de notation" editable="top">
                    <field name="nom"/>
                    <field name="savoir_et_connaissance"/>
                    <field name="savoir_faire_et_experience"/>
                    <field name="savoir_etre_et_qualite_requises"/>
                    <field name="formations_diplome"/>
                    <field name="total_points" readonly="1"/>
                    <field name="observation"/>
                </tree>
            </field>
        </record>

        <!-- Action pour ouvrir la vue de type tree de la classe Employee -->
        <record id="action_employee_tree" model="ir.actions.act_window">
            <field name="name">Employee</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">candidat</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_employee_tree"/>
        </record>

        <!-- Menu pour accéder à la vue de type tree de la classe Employee -->
        <menuitem id="menu_employee_tree" name="Employee Tree" parent="hr_recruitment.menu_hr_recruitment_root" sequence="30"/>
        <menuitem id="menu_employee_tree_action" name="Employee Tree Action" parent="menu_employee_tree" action="action_employee_tree"/>
    </data>
</odoo>
