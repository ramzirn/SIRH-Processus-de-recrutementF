<odoo>
    <data>
        <record id="view_tree_sirh_candidat" model="ir.ui.view">
            <field name="name">sirh.candidat.tree</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sexe"/>
                    <field name="date_naissance"/>
                    <field name="lieu_naissance"/>
                    <field name="situation_familiale"/>
                    <field name="adresse"/>
                    <field name="mobile"/>
                    <field name="email"/>
                    <field name="diplomes"/>
                    <field name="specialite"/>
                </tree>
            </field>
        </record>

        <record id="view_form_sirh_candidat" model="ir.ui.view">
            <field name="name">sirh.candidat.form</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Informations Générales">
                                <group>
<!--                                    <field name="sexe"/>-->
                                    <field name="sexe" widget="radio" class="o_horizontal_layout"/>
                                    <field name="nom"/>
                                    <field name="prenom"/>
                                    <field name="date_naissance"/>
                                    <field name="lieu_naissance"/>
                                    <field name="situation_familiale"/>
                                    <field name="adresse"/>
                                    <field name="mobile"/>
                                    <field name="email"/>
                                    <field name="diplomes"/>
                                    <field name="specialite"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_list_candidat" model="ir.actions.act_window">
            <field name="name">Liste des candidats</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidat</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
        </record>

        <record id="act_form_candidat" model="ir.actions.act_window">
            <field name="name">Ajouter un candidat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidat</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_candidats" name="Candidats" parent="hr_recruitment.menu_hr_recruitment_root" sequence="20"/>

        <menuitem id="menu_list_candidat" name="Liste des candidats" parent="menu_candidats"
                  action="act_list_candidat" sequence="20"/>

        <menuitem id="menu_form_candidat" name="Ajouter un candidat" parent="menu_candidats"
                  action="act_form_candidat" sequence="10"/>
    </data>
</odoo>