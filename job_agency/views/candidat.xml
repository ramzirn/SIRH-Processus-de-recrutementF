<odoo>
    <data>
        <!--        view form candidat-->
        <record id="view_candidat_form" model="ir.ui.view">
            <field name="name">sirh.candidat.form</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <form string="Fiche Candidat">
                    <sheet>
                        <group>
                            <field name="sexe"/>
                            <field name="nom"/>
                            <field name="prenom"/>
                            <field name="date_naissance"/>
                            <field name="lieu_naissance"/>
                            <field name="situation_familiale"/>
                            <field name="adresse"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="diplome"/>
                            <field name="specialite"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        view liste candidats-->
        <record id="view_candidat_tree" model="ir.ui.view">
            <field name="name">sirh.candidat.tree</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <form string="Liste des candidats">
                    <sheet>
                        <field name="sexe"/>
                        <field name="nom"/>
                        <field name="prenom"/>
                        <field name="date_naissance"/>
                        <field name="lieu_naissance"/>
                        <field name="situation_familiale"/>
                        <field name="adresse"/>
                        <field name="mobile"/>
                        <field name="email"/>
                        <field name="diplome"/>
                        <field name="specialite"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        view liste candidatures-->
        <record id="view_cadidature_tree" model="ir.ui.view">
            <field name="name">sirh.candidature.tree</field>
            <field name="model">sirh.candidature</field>
            <field name="arch" type="xml">
                <form string="Liste des candidatures">
                    <sheet>
                        <field name="candidat_id"/>
                        <field name="datedepot"/>
                        <field name="disponibilite"/>
                        <field name="conditionphysique"/>
                        <field name="departement"/>
                        <field name="docs"/>
                    </sheet>
                </form>
            </field>
        </record>


