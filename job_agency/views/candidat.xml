<odoo>
    <data>
        <!--        view form candidat-->
        <record id="view_candidat_form" model="ir.ui.view">
            <field name="name">sirh.candidat.form</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <form string="Fiche Candidat">
                    <sheet>
                        <group>
                            <field name="sexe"/>
                            <field name="nom"/>
                            <field name="prenom"/>
                            <field name="date_naissance"/>
                            <field name="lieu_naissance"/>
                            <field name="situation_familiale"/>
                            <field name="adresse"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="diplome"/>
                            <field name="specialite"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        view liste candidats-->
        <record id="view_candidat_tree" model="ir.ui.view">
            <field name="name">sirh.candidat.tree</field>
            <field name="model">sirh.candidat</field>
            <field name="arch" type="xml">
                <form string="Liste des candidats">
                    <sheet>
                        <field name="sexe"/>
                        <field name="nom"/>
                        <field name="prenom"/>
                        <field name="date_naissance"/>
                        <field name="lieu_naissance"/>
                        <field name="situation_familiale"/>
                        <field name="adresse"/>
                        <field name="mobile"/>
                        <field name="email"/>
                        <field name="diplome"/>
                        <field name="specialite"/>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        action pour vue tree candidat-->
        <record id="act_list_candidat" model="ir.actions.act_window">
            <field name="name">Liste des candidats</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.candidat</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
        </record>

        <!-- Menu pour accéder à la vue de type tree de la classe Employee -->
        <menuitem id="menu_candidats" name="Candidats" parent="hr_recruitment.menu_hr_recruitment_root" sequence="20"/>
        <menuitem id="menu_liste_candidat" name="Liste des candidats" parent="menu_candidats" action="act_list_candidat"/>

    </data>
</odoo>