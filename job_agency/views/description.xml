<odoo>
    <data>
        <record id="view_form_description" model="ir.ui.view">
            <field name="name">sirh.desc.form</field>
            <field name="model">sirh.desc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="intitule"/>
                            <field name="descr"/>
                            <field name="niveau"/>
                            <field name="diplome"/>
                            <field name="formation"/>
                            <field name="formation_experience"/>
                            <field name="savoir_faire"/>
                            <field name="savoir_etre"/>
                            <field name="type"/>
                            <field name="horaires"/>
                            <field name="remuneration"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_show_form_description" model="ir.actions.act_window">
            <field name="name">Description du poste</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.desc</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_form_description"/>
            <field name="target">new</field>
        </record>

        <record id="view_description" model="ir.ui.view">
            <field name="name">sirh.desc.form</field>
            <field name="model">sirh.desc</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="intitule" readonly="1"/>
                            <field name="descr" readonly="1"/>
                            <field name="niveau" readonly="1"/>
                            <field name="diplome" readonly="1"/>
                            <field name="formation" readonly="1"/>
                            <field name="formation_experience" readonly="1"/>
                            <field name="savoir_faire" readonly="1"/>
                            <field name="savoir_etre" readonly="1"/>
                        </group>
                        <group>
                            <field name="type" readonly="1"/>
                            <field name="horaires" readonly="1"/>
                            <field name="remuneration" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

