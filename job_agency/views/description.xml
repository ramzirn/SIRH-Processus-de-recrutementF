        <!--        vue tree description-->
        <record id="view_desc_tree" model="ir.ui.view">
            <field name="name">sirh.desc.tree</field>
            <field name="model">sirh.desc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Liste des descriptions">
                    <field name="intitule"/>
                    <field name="descr"/>
                    <field name="niveau"/>
                    <field name="diplome"/>
                    <field name="formation"/>
                    <field name="formation_experience"/>
                    <field name="savoir_faire"/>
                    <field name="savoir_etre"/>
