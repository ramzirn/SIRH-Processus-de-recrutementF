<odoo>
    <data>
        <!--        Formulaire de description-->
        <record id="view_form_description" model="ir.ui.view">
            <field name="name">sirh.desc.form</field>
            <field name="model">sirh.desc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="intitule"/>
                                <field name="descr"/>
                            </group>
                            <group string="Compétences demandées">
                                <field name="niveau"/>
                                <field name="diplome"/>
                                <field name="formation"/>
                                <field name="formation_experience"/>
                                <field name="savoir_faire"/>
                                <field name="savoir_etre"/>
                            </group>
                            <group string="Conditions de l'emploi">
                                <field name="type"/>
                                <field name="temps"/>
                                <field name="horaires"/>
                                <field name="remuneration"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        action pour la vue formulaire-->
        <record id="action_show_form_description" model="ir.actions.act_window">
            <field name="name">Description du poste</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.desc</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_form_description"/>
            <field name="target">current</field>
        </record>

