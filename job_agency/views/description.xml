<odoo>
    <data>
        <!--        Formulaire de description-->
        <record id="view_form_description" model="ir.ui.view">
            <field name="name">sirh.desc.form</field>
            <field name="model">sirh.desc</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <page string="Général">
                                <group>
                                    <field name="intitule"/>
                                    <field name="descr"/>
                                </group>
                            </page>
                            <page string="Compétences demandées">
                                <group>
                                    <field name="niveau"/>
                                    <field name="diplome"/>
                                    <field name="formation"/>
                                    <field name="formation_experience"/>
                                    <field name="savoir_faire"/>
                                    <field name="savoir_etre"/>
                                </group>
                            </page>
                            <page string="Conditions de l'emploi">
                                <group>
                                    <field name="type"/>
                                    <field name="temps"/>
                                    <field name="horaires"/>
                                    <field name="remuneration"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!--        vue tree description-->
        <record id="view_desc_tree" model="ir.ui.view">
            <field name="name">sirh.desc.tree</field>
            <field name="model">sirh.desc</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Liste des descriptions">
                    <field name="intitule"/>
                    <field name="descr"/>
                    <field name="niveau"/>
                    <field name="diplome"/>
                    <field name="formation"/>
                    <field name="formation_experience"/>
                    <field name="savoir_faire"/>
                    <field name="savoir_etre"/>
                    <field name="type"/>
                    <field name="temps"/>
                    <field name="horaires"/>
                    <field name="remuneration"/>
                </tree>
            </field>
        </record>

        <!--        action pour vue tree description-->
        <record id="act_list_form_desc" model="ir.actions.act_window">
            <field name="name">Liste des descriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.desc</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
        </record>

        <!--        action pour vue form description-->
        <record id="act_form_desc" model="ir.actions.act_window">
            <field name="name">Liste des descriptions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.desc</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Definir une description" id="menu_form_desc" action="act_form_desc"
                  parent="menu_besoin" sequence="30"/>

        <menuitem name="Liste des descriptions" id="menu_liste_desc" action="act_list_form_desc"
                  parent="menu_besoin" sequence="40"/>
    </data>
</odoo>