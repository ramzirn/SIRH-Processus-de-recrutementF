<odoo>
    <data>


        <!--                Liste des recrutements-->
        <record id="view_form_recruitment_tree" model="ir.ui.view">
            <field name="name">sirh.form.tree</field>
            <field name="model">sirh.form</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Liste des recrutements">
                    <field name="motif"/>
                    <field name="pourex"/>
                    <field name="budget"/>
                    <field name="intitule"/>
                    <field name="echeanceContrat"/>
                    <field name="xp"/>
                    <field name="lieu"/>
                    <field name="deplacement"/>
                    <field name="autre"/>
                    <field name="dateEntree"/>
                </tree>
            </field>
        </record>

        <!--        Formulaire de recrutement-->
        <record id="view_form_recruitment_form" model="ir.ui.view">
            <field name="name">sirh.forme.form</field>
            <field name="model">sirh.form</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Definir le besoin">
                            <field name="motif" class="oe_block"/>
                            <field name="pourex"/>
                            <field name="budget"/>
                            <field name="intitule"/>
                            <field name="echeanceContrat"/>
                            <field name="xp"/>
                            <field name="lieu"/>
                            <field name="deplacement"/>
                            <field name="autre"/>
                            <field name="dateEntree"/>
                        </group>
                         <group string="Description du poste:">
                            <field name="desc_id"/>
                        </group>
                        <group string="Annonce">
                            <field name="annonce_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="act_form_recruitment" model="ir.actions.act_window">
            <field name="name">Definition du besoin</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sirh.form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_besoin" name="Besoin" parent="hr_recruitment.menu_hr_recruitment_root" sequence="1"/>

        <menuitem name="Liste des besoins" id="menu_liste_besoins" action="act_form_recruitment"
                  parent="menu_besoin"/>
    </data>
</odoo>

