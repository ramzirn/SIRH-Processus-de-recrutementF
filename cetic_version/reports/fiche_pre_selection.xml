<odoo>
    <data>
        <template id="fiche_pre_selection_temp">
            <t t-call="web.basic_layout">
                <style type="text/css">
                    <![CDATA[
                table {
                border-spacing: 0; /* Pas d'espacement entre les cellules */
                width: 100%;
                border-collapse: separate;
                }
                th, td {
                border: 1px solid black;
                padding: 10px;
                }
                .right-cell {
                border: 1px solid black;
                padding: 10px;
                width: 66%;
                }
                .left-cell {
                border: 1px solid black;
                padding: 10px;
                width: 33%;
                }
                .spacer-cell {
                width: 5px; /* Largeur de l'espace entre la colonne 1 et 2 */
                border: none; /* Pas de bordure pour l'espace */
                }
                .no-border-top {
                border-top: none;
                }
                .no-border-right {
                border-right: none;
                }
            ]]>
                </style>
                <div class="page" style="margin-left: 20px; margin-right: 20px;">
                    <div>
                        <h1 style="text-align: center;">Fiche de présélection de candidats</h1>
                        <br/>
                        <p style="text-align: center; width:100%;"><b>FP Etabli par :</b>......................................                      <b> Lieu </b> : ..............................                      <b>Date :</b>.............
                        </p>
                        <p>I- Informations sur le candidat :</p>
                        <table style="border-collapse: collapse; margin: 20px auto; width: 100%;">
                            <tr>
                                <td class="left-cell no-border-right">Nom et prénom du
                                    candidat :
                                </td>
                                <td class="right-cell">
                                    .............................................................................................................................................
                                </td>
                            </tr>
                            <tr>
                                <td class="left-cell no-border-top no-border-right">Age :</td>
                                <td class="right-cell no-border-top">
                                    .............................................................................................................................................
                                </td>
                            </tr>
                            <tr>
                                <td class="left-cell no-border-top no-border-right">Lieu de Résidence :</td>
                                <td class="right-cell no-border-top">
                                    .............................................................................................................................................
                                </td>
                            </tr>
                            <tr>
                                <td class="left-cell no-border-top no-border-right">Profil :</td>
                                <td class="right-cell no-border-top">
                                    .............................................................................................................................................
                                </td>
                            </tr>
                            <tr>
                                <td class="left-cell no-border-top no-border-right">Expérience :</td>
                                <td class="right-cell no-border-top">
                                    .............................................................................................................................................
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div>
                        <p>II- Résultats de l'entretien</p>
                        <br/>
                        <table>
                            <tr>
                                <td rowspan="2" style="text-align:center;">Critère d'appréciation</td>
                                <td class="spacer-cell"> </td>
                                <td colspan="3" style="text-align:center;">Appréciation</td>
                            </tr>
                            <tr>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-right no-border-top" style="text-align:center;">Bon</td>
                                <td class="no-border-top no-border-right" style="text-align:center;">Moyen</td>
                                <td class="no-border-top" style="text-align:center;">Faible</td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Expression orale</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right" style="width=33%"> </td>
                                <td class="no-border-top no-border-right" style="width=33%"> </td>
                                <td class="no-border-top" style="width=33%"> </td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Stabilité du candidat</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top"> </td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Présentation et tenue du candidat</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top"> </td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Contact et relations humaines</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top"> </td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Motivations pour le poste de travail</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top"> </td>
                            </tr>
                            <tr>
                                <td class="no-border-top">Autre (à préciser)</td>
                                <td class="spacer-cell"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top no-border-right"> </td>
                                <td class="no-border-top"> </td>
                            </tr>
                        </table>
                    </div>

                    <div>
                        <br/>
                        <br/>
                        <p>III- Appréciation finale</p>
                        <br/>
                        <table>
                            <tr style="width: 100%">
                                <td style="height: 330px"> </td>
                            </tr>
                        </table>
                    </div>

                </div>
            </t>
        </template>
    </data>
</odoo>
