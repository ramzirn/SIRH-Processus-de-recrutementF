<odoo>
    <data>
        <record id="view_form_recruitment_tree" model="ir.ui.view">
            <field name="name">rh.formentry.tree</field>
            <field name="model">rh.formentry</field>
            <field name="arch" type="xml">
                <tree string="Liste des recrutements">
                    <field name="motif"/>
                    <field name="pourex"/>
                    <field name="budget"/>
                    <field name="intitule"/>
                    <field name="echeanceContrat"/>
                    <field name="xp"/>
                    <field name="lieu"/>
                    <field name="Deplacement"/>
                    <field name="dateEntree"/>
                </tree>
            </field>
       </record>

        <record id="view_form_recruitment_form" model="ir.ui.view">
            <field name="name">rh.formentry.form</field>
            <field name="model">rh.formentry</field>
            <field name="arch" type="xml">
                <header>
                        <button name="action_open_description_poste" string="Ajouter description" type="object" class="oe_highlight"/>
                </header>
                <form >
                    <sheet>
                        <group>
                            <field name="motif"/>
                            <field name="pourex"/>
                            <field name="budget"/>
                            <field name="intitule"/>
                            <field name="echeanceContrat"/>
                            <field name="xp"/>
                            <field name="lieu"/>
                            <field name="Deplacement"/>
                            <field name="autre"/>
                            <field name="dateEntree"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

